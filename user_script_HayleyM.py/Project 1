string1 = input("10")
string2 = input("12")
string3 = input("30")
string4 = input("13")

int1 = int(string1)
int2 = int(string2)
int3 = int(string3)
int4 = int(string4)

#Let's see the sum of our damage
sum (int1, int2, int3, int4)
print (sum)

#What was our minimum damage?
min (int1, int2, int3,int4)
print (min)

